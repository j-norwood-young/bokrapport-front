doctype html
html
	head
		title BokRapport
		link(rel='stylesheet', href='/development/css/bokrapport.css')
		link(rel="shortcut icon",href="/images/favicon.png")
		meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1, minimum-scale=1, user-scalable=no")
		meta(property="og:title",content="BokRapport, #{game.headline}")
		meta(property="og:url",content="http://bokrapport.com/")
		meta(property="og:type",content="website")
		meta(property="og:description",content="Maak jou eie BokRapport: http://bokrapport.com")
		meta(property="og:image",content="http://bokrapport.com/images/bokrapport-fb.jpg")
		meta(property="og:image:width",content="1200")
		meta(property="og:image:height",content="630")
	body
		.bg-container
		include navbar
		.content
			.container
				include dateline
				if game.live
					.row
						.col-xs-12
							.alert.alert-info Skuif die rugbybal om 'n speler te bepunt.
					.row.players
						- var x = 0;
						each player in players
							include player
							if (x % 2)
								| </div><br style="clear:both" /><div id="row" class="players">
							- x++
				else
					.alert.alert-info Di√© wedstryd kan eers bepunt word wanneer dit afskop.
		include js